<link href="{{ 'stickyalert.css' | asset_url }}" rel="stylesheet" type="text/css" />
<script src="{{ 'stickyalert.js' | asset_url }}"></script>
<script type="text/javascript">
$(document).ready(function() {
	$('#alert-container').stickyalert({
		barColor: '#4f7282', // alert background color
		barFontColor: '#FFF', // text font color
		barFontSize: '1.1rem', // text font size
		barText: 'Shop The Convention Collection', // the text to display, linked with barTextLink
		barTextLink: '/collections/convention-2018?convention=true', // url for anchor
		cookieRememberDays: '0', // in days
		displayDelay: '3000' // in milliseconds, 3 second default
	});
});
</script>