{% schema %}
  {
    "name": "Pickleball Settings",
    "settings": [
      {
        "type": "collection",
        "id": "lifestyle_collection",
        "label": "Featured Collection"
      },
      {
        "type": "collection",
        "id": "ultimate_products",
        "label": "Ultimate Products"
      },
      {
        "type": "image_picker",
        "id": "pickle_ball_pro",
        "label": "Pickle Ball "
      }
    ],
    "blocks": [
      {
        "name": "Product Labels",
        "type": "value_prop",
        "settings": [
          {
            "type": "product",
            "id": "product",
            "label": "Prod Label"
          },
          {
            "type": "text",
            "id": "prod_benefit",
            "label": "Prod Benefit"
          },
          {
            "type": "text",
            "id": "prod_fine_copy",
            "label": "Prod Value"
          }
        ]
      }
    ]
  }
{% endschema %}


{% style %}
    .promo-banner{
    background-color: #006145;
    background: #006145;
  }
    .top-container.smart-orders-bg{
    padding-bottom: 600px;
  }
    .mid-container{
    padding-bottom: 40px;
  }
    .mid-img{
    height: auto;
    width: auto;
  }
    .mid-right{
    text-align: left !important;
  }
    @media screen and (min-width: 1024px){
    #main_prod{
    height: 450px !important;
    width: auto !important;
	margin-top: 50px;
	}
   }
  }
   	.mid-bg{
    background: #FFFFFF !important;
  }
	.outer-li{
    margin-left: 10px;
  }
{% endstyle %}

<div class="page-wrappery smart-orders-page">
  
    <div class='mid-bg' style = "z-index: 3; padding-top: -50px;">
        <div class="mid-container mid-top" style="background: #ffffff; padding-top: 10px;">

            <div class='mid-left' style="flex: 0 0 50%; ">
                <div class='mid-img' style="flex: 0 0 100%;">
                    <img id='main_prod' src="{{ section.settings.pickle_ball_pro | img_url: 'original' }}" > 
                </div>
            </div>

            <div class='mid-right' style="background:#ffffff; flex: 0 0 50%">
                <div>
                    <h2 style="color:#231F20; font-size:38px; line-height:40px; margin-top:60px; padding-left:10px; padding-right:10px;" >PICKLEBALL SPORTS PRO PACK</h2>
                    <h2 style="color:#231F20; font-size:30px; line-height:40px; padding-top:10px; padding-left:5px; padding-right:10px;" >Supercharged Performance Made Possible</h2> 
  
                    <p style="color:#231F20; padding:5px; font-size:18px;">Gain a competitive edge in the areas of strength, hand-eye coordination and joint support while fueling your body from the inside out with the Pickleball Sports Pro 
                                                                Pack.  This pack is for the serious player who wants to be continuously improving with minimal recovery time.</p>
                    <br>
                    <br>
                    <p style="border-bottom: 2px solid #006145; color:#231f20; width: 100px; display: initial; font-size:18px; ">The Pickleball Sports Pro Pack provides:</p>

                    <ul style="list-style:none; padding-top: 20px; font-size:18px;">
                        <li style="color:#231F20; padding: 3px">Strengh</li>
                        <li style="color:#231F20">+</li>
                        <li style="color:#231F20; padding: 3px">Stamina</li>
                        <li style="color:#231F20">+</li>
                        <li style="color:#231F20; padding: 3px">Hydration</li>
                        <li style="color:#231F20">+</li>
                        <li style="color:#231F20; padding: 3px">Focus</li>
                        <li style="color:#231F20">+</li>
                        <li style="color:#231F20; padding: 3px">Recovery</li>
                        <li style="color:#231F20">+</li>
                        <li style="color:#231F20; padding: 3px">Joint Support</li>
                    </ul>   
				<div style="text-align:center; margin-left: 20px;">
                      <form class="pdp-info__form smart-add-to-cart-form" action="/cart/add" method="post" style="display: inline-block;">
                        <select id="single-product-select" class='smart-orders-select' name="id">
                          
                          <option value="31631982362696">Default Title - $300.00</option>
                        </select>
                        <div class="pdp-info__submit-wrap">
                          <input class="pdp-info__qty btn btn--secondary" type="hidden" value="1" name="quantity">
                          <input class="product-a pdp-info__submit add-to-cart-button btn btn--primary" type="submit"
                                 value="Add to cart" />
                        </div>
                      </form>
                  <p><a style="color:#006145; padding-top:25px;" href="https://ishoppurium.com/products/pickleball-pro-pack" target="_blank">Learn More About the Pickleball Sports Pro Pack</a></p>
               </div>
             </div>
          </div>
        </div>
    </div>   
  
  
  
<div class="lower-container low-top" style="background: #f5f5f5;">
        {% if collections[section.settings.lifestyle_collection].products != "" %}
        <div class='lower-title' style="text-align:center">
            <h2>Optimize Your Game!</h2>
          <div class="get-started" style = "font-size: 18px;">
            <p>We all know that excess weight means excess mass to move and strain on joints. If you are looking to shed some pounds and be more nimble on the court and 
               light on your feet, The Ultimate Lifestyle Transformation will help you achieve just that. It provides foundational nutrition and a simple plan to achieve 
               your goals. </p>
            <br>
            <p>At your ideal weight now? Try Daily Core 4 to get the baseline nutrition needed to thrive on and off the court.</p>
          </div>
          </div>
        <div class="colls-grid">
            <div class='featured-products-container featured-products smart-order-products__slider'>
                {% for product in collections[section.settings.lifestyle_collection].products %}
                <div class="colls-grid__product product">
                    <a href="{{ product.url }}">
                        <div class="tag-img-container">
                            <img class="colls-grid__product-img" src="{{ product | img_url: '680x' | scale: 2 }}" />
                            <p>{{ product.title }}</p>
                        </div>
                    </a>
                    <form class="pdp-info__form smart-add-to-cart-form" action="/cart/add" method="post">
                        <select id="single-product-select" class='smart-orders-select' name="id">
                            {% for variant in product.variants %}
                            <option value="{{ variant.id }}">{{ variant.title }} - {{ variant.price | money }}</option>
                            {% endfor %}
                        </select>
                        <div class="pdp-info__submit-wrap">
                            <input class="pdp-info__qty btn btn--secondary" type="hidden" value="1" name="quantity">
                            <input class="product-a pdp-info__submit add-to-cart-button btn btn--primary" type="submit"
                                value="Add to cart" />
                        </div>
                    </form>
                </div>
                {% endfor %}
            </div>
        </div>
        {% endif %}
        <hr class='bot-hr' style="background: #006145;">
    </div>


</div>

