{% schema %}
  {
    "name": "Pickleball Settings",
    "blocks": [
      {
        "name": "Product Labels",
        "type": "value_prop",
        "settings": [
          {
            "type": "product",
            "id": "product", 
            "label": "Prod Label"
          },
          {
            "type": "text",
            "id": "prod_benefit",
            "label": "Prod Benefit"
          },
          {
            "type": "text",
            "id": "prod_mayhelp",
            "label": "May Help"
          },
          {
            "type": "text",
            "id": "prod_fine_copy",
            "label": "Prod Value"
          },
          {
            "type": "text",
            "id": "prod_fine_copy1",
            "label": "Prod Value1"
          },
          {
            "type": "text",
            "id": "prod_fine_copy2",
            "label": "Prod Value2"
          },
          {
            "type": "text",
            "id": "prod_fine_copy3",
            "label": "Prod Value3"
          }
        ]
      }
    ]
  }
{% endschema %}

{% style %}
 
    
    .mid-container{
    padding-bottom: 40px;
  }
    .mid-img{
    height: auto;
    width: auto;
  }
    .mid-right{
    text-align: left !important;
  }
    @media screen and (min-width: 1024px){
    #main_prod{
    height: 450px !important;
    width: auto !important;
	margin-top: 50px;
	}
   }
  }
   	.mid-bg{
    background: #FFFFFF !important;
  }
	.outer-li{
    margin-left: 10px;
  }
{% endstyle %}


{% javascript %}
{% endjavascript %}

<div class="page-wrappery smart-orders-page">
  <div class="lower-container low-top" style= "background-color: #f5f5f5;padding-bottom: 6%;">
        <div class="colls-grid" style="flex-wrap: nowrap; justify-content: center;">
            {% for block in section.blocks %}
            {% assign product_item = all_products[block.settings.product] %}
            <div class="colls-grid__product product" style="margin: 60px;  ">
                 <div style="min-height: 120px; margin-top: 0px;">
                    <h2 style="color:#006145; font-size: 22px; font-weight:bold; margin-right: -20px; margin-left: -20px;"> {{ block.settings.prod_benefit }}</h2>   
                    <p style="font-size: 18px; font-weight:bold; padding-bottom: 10px;"> {{ block.settings.prod_mayhelp }}</p>   
                   <ul style="list-style:none; padding-bottom: 15px; text-align: left; font-size: 16px; margin-left:0px; margin-right: -10px;">    
                       <li>• {{ block.settings.prod_fine_copy }} </li>
                       <li>• {{ block.settings.prod_fine_copy1 }} </li>
                       <li>• {{ block.settings.prod_fine_copy2 }}</li>
                       <li>  {{ block.settings.prod_fine_copy3 }}</li>
                    </ul>        
                </div>
                <div class="tag-img-container">
                    <img class="colls-grid__product-img"
                        src="{{ product_item.featured_image | img_url: '680x' | scale: 2 }}" />
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>