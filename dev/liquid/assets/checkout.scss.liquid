.anyflexbox .banner {
	display: block;
    padding: 6px 0;
	background-color: #F5F5F5;
    text-align: center;
}

.banner-logo {
	height: 42px;
}

.product__image {
	vertical-align: top;
}

div[data-step="payment_method"] {
  .hidden-on-desktop {
    display: none;
  }
  .step__sections + form {
    padding-top: 0;
  }
}

.product__description__property {
  padding: 3px 0;
  line-height: 14px;

  .prop_first {
    color: #3f3f3f;
  }
}


.anyflexbox .content .wrap {
  flex-direction: column;
}

@media (min-width: 1000px) {
  .anyflexbox .content .wrap {
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    -webkit-flex-direction: row;
    -ms-flex-direction: row;
    flex-direction: row-reverse;
  }
}
