@font-face {
  font-family: 'Brandon Grotesque';
  src: url("{{ 'brandon-grotesque.eot' | asset_url }}"); /* IE9 Compat Modes */
  src: url("{{ 'brandon-grotesque.eot?#iefix' | asset_url }}") format('embedded-opentype'), /* IE6-IE8 */
      url("{{ 'brandon-grotesque.woff' | asset_url }}") format('woff'), /* Modern Browsers */
      url("{{ 'brandon-grotesque.ttf' | asset_url }}")  format('truetype'), /* Safari, Android, iOS */
      url("{{ 'brandon-grotesque.svg#50bf5a2005a5412419d6a4b30314e68e' }}") format('svg'); /* Legacy iOS */
  font-style:   normal;
  font-weight:  400;
}

*, h1, h2, h3 {
	font-family: 'Brandon Grotesque';
}

a,
.link,
.icon-svg--color-accent {
	color: #80BD01;
	&:hover,
	&:active,
	&:focus {
		color: #33A643;
	}
}

.step__footer__previous-link:hover .previous-link__icon {
	fill: #33A643;
}

.btn {
	background-color: #80BD01;
	&:hover,
	&:active,
	&:focus {
		background-color: #33A643;
	}
}

